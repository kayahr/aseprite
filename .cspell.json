{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/master/cspell.schema.json",
    "version": "0.2",
    "files": [
        "**/*"
    ],
    "enabledLanguageIds": [
        "markdown",
        "typescript"
    ],
    "ignorePaths": [
        "node_modules",
        "coverage",
        "doc/api/**",
        "src/sandbox/**",
        "package-lock.json",
        "git",
        "lib",
        "dist",
        "*.log",
        "*.tgz"
    ],
    "words": [
        "apidoc",
        "Aseprite",
        "kayahr",
        "pingpong",
        "Reimer",
        "spritesheet"
    ],
    "language": "en",
    "enableFiletypes": [
        "json"
    ]
}
